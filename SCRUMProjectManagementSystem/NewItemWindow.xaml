<Window x:Class="SCRUMProjectManagementSystem.NewItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ViewModel;assembly=ViewModel"
        Title="Window1" Height="300" Width="300" Loaded="Window_Loaded">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:UserView}">
            <StackPanel>
                <TextBlock Text="{Binding Path=Name}"/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:TeamView}">
            <StackPanel>
                <TextBlock Text="{Binding Path=Name}"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Name="stackPanel1">
            <Label Height="23" Name="label1" />
            <Label Height="23" Name="label2" />
            <Label Height="23" Name="label3" />
            <Label Height="23" Name="label4" />
            <Label Height="23" Name="label5" />
            <Label Height="23" Name="label6" />
            <Label Height="23" Name="label7" />
            <Label Height="23" Name="label8" />
            <Label Height="23" Name="label9" />
        </StackPanel>
        <StackPanel Grid.Column="1" Name="stackPanel_project" Margin="0,0,0,29" Visibility="Hidden">
            <TextBox Height="23" Name="textBox_project1" Width="120" />
            <DatePicker Height="25" Name="datePicker_project1" Width="115" />
            <DatePicker Height="25" Name="datePicker_project2" Width="115" />
            <ComboBox Height="23" Name="comboBox_project1" Width="120" ItemsSource="{Binding Path=Name}" />
            <ComboBox Height="23" Name="comboBox_project2" Width="120" />
        </StackPanel>
        <StackPanel Grid.Column="1" Name="stackPanel_sprint" Margin="0,0,0,29" Visibility="Hidden">
            <TextBox Height="23" Name="textBox_sprint1" Width="120" />
            <DatePicker Height="25" Name="datePicker_sprint1" Width="115" />
            <DatePicker Height="25" Name="datePicker_sprint2" Width="115" />
        </StackPanel>
        <StackPanel Grid.Column="1" Name="stackPanel_story" Margin="0,0,0,29" Visibility="Hidden">
            <TextBox Height="23" Name="textBox_story1" Width="120" PreviewTextInput="textBox_story1_PreviewTextInput" />
            <TextBox Height="23" Name="textBox_story2" Width="120" />
        </StackPanel>
        <StackPanel Grid.Column="1" Name="stackPanel_task" Margin="0,0,0,29" Visibility="Hidden">
            <TextBox Height="23" Name="textBox_task1" Width="120" />
            <ComboBox Height="23" Name="comboBox_task1" Width="120" />
            <ComboBox Height="23" Name="comboBox_task2" Width="120" />
            <ComboBox Height="23" Name="comboBox_task3" Width="120" />
            <ComboBox Height="23" Name="comboBox_task4" Width="120" />
            <ComboBox Height="23" Name="comboBox_task5" Width="120" />
        </StackPanel>
        <StackPanel Grid.Column="1" Name="stackPanel_team" Margin="0,0,0,29" Visibility="Hidden">
            <TextBox Height="23" Name="textBox_team1" Width="120" />
            <ComboBox Height="23" Name="comboBox_team1" Width="120" />
            <ComboBox Height="23" Name="comboBox_team2" Width="120" />
        </StackPanel>
        <Button Content="Add" Grid.Column="1" Name="button1" Height="23" VerticalAlignment="Bottom" Margin="0,0,1,0" Click="button1_Click" />
    </Grid>
</Window>
