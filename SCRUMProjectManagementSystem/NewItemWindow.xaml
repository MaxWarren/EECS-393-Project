<Window x:Class="SCRUMProjectManagementSystem.NewItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1" Height="300" Width="300" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Name="stackPanel1">
            <Label Height="23" Name="label1" />
            <Label Height="23" Name="label2" />
            <Label Height="23" Name="label3" />
            <Label Height="23" Name="label4" />
            <Label Height="23" Name="label5" />
            <Label Height="23" Name="label6" />
            <Label Height="23" Name="label7" />
            <Label Height="23" Name="label8" />
            <Label Height="23" Name="label9" />
        </StackPanel>
        <StackPanel Grid.Column="1" Name="stackPanel_project" Margin="0,0,0,29" Visibility="Hidden">
            <TextBox Height="23" Name="textBox1" Width="120" />
            <DatePicker Height="25" Name="datePicker1" Width="115" />
            <DatePicker Height="25" Name="datePicker2" Width="115" />
            <ComboBox Height="23" Name="comboBox1" Width="120" />
            <ComboBox Height="23" Name="comboBox2" Width="120" />
        </StackPanel>
        <StackPanel Grid.Column="1" Name="stackPanel_sprint" Margin="0,0,0,29" Visibility="Hidden">
            <TextBox Height="23" Name="textBox2" Width="120" />
            <DatePicker Height="25" Name="datePicker3" Width="115" />
            <DatePicker Height="25" Name="datePicker4" Width="115" />
        </StackPanel>
        <StackPanel Grid.Column="1" Name="stackPanel_story" Margin="0,0,0,29" Visibility="Hidden">
            <ComboBox Height="23" Name="comboBox3" Width="120" />
            <TextBox Height="23" Name="textBox3" Width="120" />
        </StackPanel>
        <StackPanel Grid.Column="1" Name="stackPanel_task" Margin="0,0,0,29" Visibility="Hidden">
            <TextBox Height="23" Name="textBox4" Width="120" />
            <ComboBox Height="23" Name="comboBox4" Width="120" />
            <ComboBox Height="23" Name="comboBox5" Width="120" />
            <ComboBox Height="23" Name="comboBox6" Width="120" />
            <ComboBox Height="23" Name="comboBox7" Width="120" />
            <ComboBox Height="23" Name="comboBox8" Width="120" />
        </StackPanel>
        <StackPanel Grid.Column="1" Name="stackPanel_team" Margin="0,0,0,29" Visibility="Hidden">
            <TextBox Height="23" Name="textBox5" Width="120" />
            <ComboBox Height="23" Name="comboBox9" Width="120" />
            <ComboBox Height="23" Name="comboBox10" Width="120" />
        </StackPanel>
        <Button Content="Add" Grid.Column="1" Name="button1" Height="23" VerticalAlignment="Bottom" Margin="0,0,1,0" Click="button1_Click" />
    </Grid>
</Window>
